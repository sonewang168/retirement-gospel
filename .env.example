# ===========================================
# 退休福音 - 環境變數設定
# ===========================================

# 伺服器設定
NODE_ENV=development
PORT=3000
BASE_URL=https://your-app.onrender.com

# LINE Bot 設定
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_LIFF_ID=your_liff_id_here

# 資料庫設定 (PostgreSQL)
DATABASE_URL=postgres://user:password@host:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=retirement_gospel
DB_USER=postgres
DB_PASSWORD=your_password

# Redis 設定 (快取)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 設定
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# 外部 API 金鑰
# 中央氣象署 API
CWA_API_KEY=your_cwa_api_key

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key

# 推播設定
MORNING_PUSH_TIME=07:30
EVENING_PUSH_TIME=18:00

# 管理員設定
ADMIN_LINE_USER_IDS=Uxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# 日誌等級
LOG_LEVEL=info

# 功能開關
ENABLE_WEATHER_API=true
ENABLE_AIR_QUALITY_API=true
ENABLE_AI_RECOMMENDATION=true
ENABLE_PUSH_NOTIFICATION=true
