    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Noto Sans TC', sans-serif;
            background: linear-gradient(135deg, #E74C3C 0%, #C0392B 50%, #E74C3C 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        .logo {
            font-size: 80px;
            margin-bottom: 20px;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        h1 {
            color: white;
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .tagline {
            color: rgba(255,255,255,0.9);
            font-size: 1.2em;
            margin-bottom: 40px;
        }

        .qr-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }

        .qr-title {
            color: #2C3E50;
            font-size: 1.3em;
            margin-bottom: 20px;
        }

        .qr-code {
            margin: 20px 0;
        }

        .qr-code img {
            max-width: 200px;
            border-radius: 10px;
        }

        .line-btn {
            display: inline-block;
            background: #00B900;
            color: white;
            text-decoration: none;
            padding: 15px 40px;
            border-radius: 50px;
            font-size: 1.1em;
            font-weight: 500;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .line-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(0, 185, 0, 0.4);
        }

        .line-btn img {
            width: 24px;
            height: 24px;
            vertical-align: middle;
            margin-right: 10px;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-top: 30px;
        }

        .feature {
            background: rgba(255,255,255,0.1);
            padding: 20px 10px;
            border-radius: 15px;
            color: white;
        }

        .feature-icon {
            font-size: 2em;
            margin-bottom: 10px;
        }

        .feature-text {
            font-size: 0.9em;
        }

        .footer {
            margin-top: 40px;
            color: rgba(255,255,255,0.7);
            font-size: 0.9em;
        }

        .footer a {
            color: rgba(255,255,255,0.9);
            text-decoration: none;
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 2em;
            }
            
            .tagline {
                font-size: 1em;
            }

            .features {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
