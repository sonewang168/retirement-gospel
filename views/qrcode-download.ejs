    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Noto Sans TC', sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            color: #E74C3C;
            margin-bottom: 10px;
        }

        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
        }

        .qr-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .qr-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }

        .qr-card h3 {
            color: #2C3E50;
            margin-bottom: 15px;
        }

        .qr-card img {
            max-width: 200px;
            margin: 15px 0;
            border-radius: 10px;
        }

        .qr-card p {
            color: #666;
            font-size: 0.9em;
            margin-bottom: 15px;
        }

        .download-btn {
            display: inline-block;
            background: #E74C3C;
            color: white;
            text-decoration: none;
            padding: 10px 25px;
            border-radius: 25px;
            font-weight: 500;
            transition: transform 0.3s, background 0.3s;
        }

        .download-btn:hover {
            background: #C0392B;
            transform: scale(1.05);
        }

        .download-btn.secondary {
            background: #3498DB;
        }

        .download-btn.secondary:hover {
            background: #2980B9;
        }

        .download-btn.green {
            background: #27AE60;
        }

        .download-btn.green:hover {
            background: #219A52;
        }

        .btn-group {
            display: flex;
            gap: 10px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .poster-preview {
            max-width: 100%;
            height: auto;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }

        .instructions {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-top: 30px;
        }

        .instructions h3 {
            color: #E74C3C;
            margin-bottom: 15px;
        }

        .instructions ol {
            padding-left: 20px;
        }

        .instructions li {
            margin-bottom: 10px;
            color: #555;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 30px;
            color: #E74C3C;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
